{
  "name": "electron-updater",
  "version": "1.0.0",
  "description": "a test for electron self-updater",
  "author": "Eric Martin",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "ng build && electron .",
    "postinstall": "install-app-deps",
    "electron-aot": "ng build --prod && electron .",
    "dist": "build",
    "publish": "build -p always",
    "pack": "ng build && build"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/cdk": "^6.3.3",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/material": "^6.3.3",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/router": "^6.0.3",
    "core-js": "^2.5.4",
    "electron-log": "^1.3.0",
    "electron-updater": "^2.21.4",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.3",
    "@types/electron": "1.6.10",
    "@angular/language-service": "^6.0.3",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "electron": "^1.8.7",
    "electron-builder": "20.22.0",
    "http-server": "^0.9.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  },
  "build": {
    "appId": "electron-updater",
    "productName": "ElectronUpdater",
    "directories": {
      "buildResources": "./dist/ang-electron",
      "output": "dist"
    },
    "files": [
      "*.js",
      "dist",
      "node_modules"
    ],
    "extraResources": {
      "from": "src/api/bin/dist/",
      "to": "src/api/bin/dist/",
      "filter": [
        "**/*"
      ]
    },
    "mac": {
      "category": "cross-platform-desktop"
    },
    "nsis":{
      "createStartMenuShortcut": true,
      "createDesktopShortcut": "always"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publish": {
        "provider": "generic",
        "url": "http://localhost:8080"
      }
    }
  }
}
